<p id="notice"><%= notice %></p>

<h1>Products</h1>

<%= link_to '新增商品', new_product_path, class: "btn btn-primary" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>名稱</th>
      <th>說明</th>
      <th>售價</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.title, product %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td>
          <div class="btn-group" role="group">
            <%= link_to '編輯', edit_product_path(product), class: "btn btn-success" %>
            <%= link_to '刪除', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

